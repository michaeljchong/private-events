<%= form_with model: event do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :date %><br>
    <%= form.datetime_select :date, :ampm => true %>
  </div>

  <div>
    <%= form.label :location %><br>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :private_event, "Make Event Private?" %>
    <%= form.check_box :private_event%>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
